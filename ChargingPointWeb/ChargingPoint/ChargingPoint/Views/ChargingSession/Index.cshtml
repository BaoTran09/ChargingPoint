@model IEnumerable<ChargingPoint.Models.ChargingSession>
@{
    ViewData["Title"] = "Tổng quan phiên sạc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-5">
        <div>
            <h2 class="fw-bold mb-1">Tổng quan phiên sạc</h2>
            <p class="text-secondary mb-0">Theo dõi toàn bộ hoạt động sạc trong hệ thống</p>
        </div>
        <div class="d-flex gap-3">
            <a asp-action="ActiveSessions" class="btn btn-success d-flex align-items-center gap-2">
                <i class="bi bi-lightning-charge-fill"></i> Đang sạc (@Model.Count(s => s.Status == "Charging"))
            </a>
            <a asp-action="RequiringSessions" class="btn btn-warning text-white d-flex align-items-center gap-2">
                <i class="bi bi-patch-question-fill"></i> Chờ duyệt (@Model.Count(s => s.Status == "Requiring"))
            </a>
            <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-4">
                    <div class="rounded-circle bg-success bg-opacity-10 text-success p-3">
                        <i class="bi bi-ev-station-fill fs-2"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">@Model.Count(s => s.Status == "Charging")</h4>
                        <small class="text-secondary">Đang sạc</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-4">
                    <div class="rounded-circle bg-warning bg-opacity-10 text-warning p-3">
                        <i class="bi bi-hourglass-split fs-2"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">@Model.Count(s => s.Status == "Requiring")</h4>
                        <small class="text-secondary">Chờ duyệt</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-4">
                    <div class="rounded-circle bg-info bg-opacity-10 text-info p-3">
                        <i class="bi bi-check-circle-fill fs-2"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">@Model.Count(s => s.Status == "Completed" && s.EndTime?.Date == DateTime.Today)</h4>
                        <small class="text-secondary">Hoàn tất hôm nay</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-4">
                    <div class="rounded-circle bg-danger bg-opacity-10 text-danger p-3">
                        <i class="bi bi-exclamation-triangle-fill fs-2"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">@Model.Count(s => s.Status == "Stopped" || s.Status == "Faulted")</h4>
                        <small class="text-secondary">Bị ngắt / Lỗi</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Sessions Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-bottom py-4">
            <h5 class="mb-0 fw-semibold">Phiên sạc gần đây</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Mã phiên</th>
                            <th>Trạm</th>
                            <th>Khách / Xe</th>
                            <th>Thời gian</th>
                            <th>Năng lượng</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Take(10))
                        {
                            var statusBadge = s.Status switch
                            {
                                "Charging" => "bg-success",
                                "Requiring" => "bg-warning text-white",
                                "Completed" => "bg-info",
                                "Stopped" => "bg-danger",
                                _ => "bg-secondary"
                            };
                            var statusText = s.Status switch
                            {
                                "Charging" => "Đang sạc",
                                "Requiring" => "Chờ duyệt",
                                "Completed" => "Hoàn tất",
                                "Stopped" => "Ngắt",
                                "PoweredOff" => "Đã ngắt điện",
                                _ => s.Status
                            };

                            <tr>
                                <td><strong class="text-primary">#@s.SessionId</strong></td>
                                <td>@s.Connector?.Charger?.Station?.Name</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="avatar bg-success text-white rounded-circle" style="width:32px;height:32px;font-size:0.8rem;">
                                            @(s.Vehicle?.LicensePlate?.FirstOrDefault() ?? 'V')
                                        </div>
                                        <div>
                                            <div class="small fw-semibold">@s.Vehicle?.Model</div>
                                            <small class="text-secondary">@s.Vehicle?.Customer?.FullName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <small>@s.StartTime:HH:mm</small><br>
                                    <small class="text-secondary">@s.StartTime:dd/MM</small>
                                </td>
                                <td>
                                    @(s.MeterStopKWh.HasValue ? $"{(s.MeterStopKWh - s.MeterStartKWh):F1} kWh" : "—")
                                </td>
                                <td>
                                    <span class="badge @statusBadge bg-opacity-10 px-3 py-2">
                                        <i class="bi @(s.Status == "Charging" ? "bi-lightning-charge-fill" : "bi-clock")"></i>
                                        @statusText
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Detail" asp-route-id="@s.SessionId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>