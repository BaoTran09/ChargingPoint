<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - V-Green</title>

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />

    <!-- Leaflet (map library) -->
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />

    <!-- App & Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChargingPoint.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <header class="sidebar-header">
            <img src="~/Images/logo_v-green.jpg" alt="V-Green Logo" class="header-logo" />
            <button class="sidebar-toggle">
                <span class="material-symbols-outlined">chevron_right</span>
            </button>
        </header>

        <div class="sidebar-content">
            <!-- Search form -->
            <form action="#" class="search-form" onsubmit="return false;">
                <span class="material-symbols-outlined">search</span>
                <input type="search" placeholder="Search..." />
            </form>

            <!-- Menu list -->
            <ul class="menu-list">
                <li class="menu-item" data-tooltip="Dashboard">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="menu-text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item" data-tooltip="Stations">
                    <a asp-area="" asp-controller="Station" asp-action="Index" class="menu-link">
                        <span class="material-symbols-outlined">ev_station</span>
                        <span class="menu-text">Stations</span>
                    </a>
                </li>

                <!-- Charging Sessions with submenu -->
                <li class="menu-item has-submenu" data-tooltip="Charging Sessions">
                    <a href="javascript:void(0)" class="menu-link">
                        <span class="material-symbols-outlined">flash_on</span>
                        <span class="menu-text">Charging Sessions</span>
                        <span class="submenu-arrow material-symbols-outlined">chevron_right</span>
                    </a>
                    <ul class="submenu">
                        <li class="submenu-item">
                            <a asp-controller="ChargingSession" asp-action="Index" class="submenu-link">
                                <span class="material-symbols-outlined">list</span>
                                <span>All Sessions</span>
                            </a>
                        </li>
                        <li class="submenu-item">
                            <a asp-controller="ChargingSession" asp-action="History" class="submenu-link">
                                <span class="material-symbols-outlined">history</span>
                                <span>History</span>
                            </a>
                        </li>
                        <li class="submenu-item">
                            <a asp-controller="ChargingSession" asp-action="Requiring" class="submenu-link">
                                <span class="material-symbols-outlined">pending</span>
                                <span>Requiring</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="menu-item" data-tooltip="Reports">
                    <a asp-area="" asp-controller="Report" asp-action="Index" class="menu-link">
                        <span class="material-symbols-outlined">bar_chart</span>
                        <span class="menu-text">Reports</span>
                    </a>
                </li>
                <li class="menu-item" data-tooltip="Settings">
                    <a asp-area="" asp-controller="Settings" asp-action="Index" class="menu-link">
                        <span class="material-symbols-outlined">settings</span>
                        <span class="menu-text">Settings</span>
                    </a>
                </li>
                <partial name="_LoginPartial" />
            </ul>
        </div>

        <!-- Sidebar footer with theme toggle -->
        <div class="sidebar-footer">
            <button class="theme-toggle">
                <div class="theme-label">
                    <span class="theme-icon material-symbols-outlined">dark_mode</span>
                    <span class="theme-text">Dark Mode</span>
                </div>
                <div class="theme-toggle-track">
                    <div class="theme-toggle-indicator"></div>
                </div>
            </button>
        </div>
    </aside>

    <!-- Main content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2025 - V-Green - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/jquery-ui/dist/jquery-ui.css" />
    <script src="~/lib/jquery-ui/dist/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Custom JS - PHẢI LOAD SAU jQuery -->
    <script src="~/js/script.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>