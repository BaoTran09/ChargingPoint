@functions {
    string NumberToWords(long number)
    {
        if (number == 0) return "Không";
        if (number < 0) return "Âm " + NumberToWords(-number);

        string[] ones = { "không", "một", "hai", "ba", "bốn", "năm", "sáu", "bảy", "tám", "chín" };
        string[] tens = { "", "mười", "hai mươi", "ba mươi", "bốn mươi", "năm mươi", "sáu mươi", "bảy mươi", "tám mươi", "chín mươi" };
        string[] hundreds = { "", "một trăm", "hai trăm", "ba trăm", "bốn trăm", "năm trăm", "sáu trăm", "bảy trăm", "tám trăm", "chín trăm" };

        string ReadThreeDigits(int n)
        {
            if (n == 0) return "";
            int h = n / 100;
            int t = (n % 100) / 10;
            int o = n % 100 % 10;

            string result = hundreds[h];

            if (t > 0 || o > 0)
            {
                if (t == 0) result += " linh " + ones[o];
                else if (t == 1) result += (o == 0 ? " mười" : " mười " + ones[o]);
                else
                {
                    result += " " + tens[t];
                    if (o == 1) result += " mốt";
                    else if (o > 1) result += " " + ones[o];
                }
            }

            return result.Trim();
        }

        string result = "";

        if (number >= 1_000_000)
        {
            result += ReadThreeDigits((int)(number / 1_000_000)) + " triệu ";
            number %= 1_000_000;
        }
        if (number >= 1000)
        {
            result += ReadThreeDigits((int)(number / 1000)) + " nghìn ";
            number %= 1000;
        }
        if (number > 0) result += ReadThreeDigits((int)number);

        result = result.Trim();
        return result.Length > 0 ? char.ToUpper(result[0]) + result.Substring(1) : "Không";
    }
}