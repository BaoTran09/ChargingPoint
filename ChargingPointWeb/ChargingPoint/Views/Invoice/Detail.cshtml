@model ChargingPoint.Models.Invoice
@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn";
    var isOverdue = Model.Status == "Unpaid" && Model.ExpireDate.HasValue && Model.ExpireDate < DateTime.Now;

    var session = Model.ChargingSession;
    var connector = session?.Connector;
    var charger = connector?.Charger;
    var station = charger?.Station;

    // THAY ĐỔI: Lấy thông tin từ IndividualVehicle qua quan hệ VIN
    var individualVehicle = session?.IndividualVehicle;
    var vehicleTemplate = individualVehicle?.Vehicle; // Thông số mẫu xe (VF8, VF9...)

    var customer = Model.Customer ?? individualVehicle?.Customer;
    var user = customer?.User;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-primary fw-bold">Hóa Đơn Sạc Điện</h3>
            <p class="text-muted mb-0">Mã hóa đơn: <strong>#@Model.InvoiceId</strong></p>
        </div>
        <div>
            @if (Model.Status == "Paid")
            {
                <span class="badge bg-success badge-lg px-4 py-2"><i class="fas fa-check-circle me-2"></i>ĐÃ THANH TOÁN</span>
            }
            else if (isOverdue)
            {
                <span class="badge bg-danger badge-lg px-4 py-2"><i class="fas fa-exclamation-circle me-2"></i>QUÁ HẠN</span>
            }
            else
            {
                <span class="badge bg-warning text-dark badge-lg px-4 py-2"><i class="fas fa-clock me-2"></i>CHỜ THANH TOÁN</span>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card invoice-card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h5 class="mb-0 fw-bold">HÓA ĐƠN GIÁ TRỊ GIA TĂNG</h5>
                            <small class="opacity-75">V-GREEN CHARGING NETWORK</small>
                        </div>
                        <div class="col-md-5 text-end border-start border-white border-opacity-25">
                            <div class="small">Mẫu số: @Model.InvoiceTemplate</div>
                            <div class="small">Ký hiệu: @Model.InvoiceSymbol</div>
                            <div class="h5 mb-0">Số: <strong>@Model.InvoiceNumber.ToString("D7")</strong></div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="section mb-4">
                        <h6 class="section-title text-uppercase"><i class="fas fa-building me-2"></i>Đơn vị cung cấp dịch vụ</h6>
                        <div class="ps-3 border-start border-3 border-primary border-opacity-25">
                            <p class="mb-1"><strong>CÔNG TY CP PHÁT TRIỂN TRẠM SẠC TOÀN CẦU V-GREEN</strong></p>
                            <p class="mb-1 text-muted small"><i class="fas fa-map-marker-alt me-2"></i>Trạm: @(station?.Name ?? "Hệ thống trạm sạc V-Green")</p>
                            <p class="mb-1 text-muted small"><i class="fas fa-location-arrow me-2"></i>Địa chỉ: @(station?.Address ?? "Toàn quốc")</p>
                            <p class="mb-0 text-muted small"><i class="fas fa-phone me-2"></i>Hotline: 1900 1234</p>
                        </div>
                    </div>

                    <div class="row section mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <h6 class="section-title text-uppercase"><i class="fas fa-user me-2"></i>Khách hàng</h6>
                            <div class="info-content small ps-2">
                                <p class="mb-1"><strong>@((Model.Snashot_CustomerName ?? customer?.FullName ?? "Khách hàng vãng lai").ToUpper())</strong></p>
                                <p class="mb-1">SĐT: @(Model.Snashot_CustomerPhone ?? customer?.PhoneNumber ?? "N/A")</p>
                                <p class="mb-0">Email: @(Model.Snashot_CustomerEmail ?? user?.Email ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="section-title text-uppercase"><i class="fas fa-car me-2"></i>Thông tin phương tiện</h6>
                            <div class="info-content small ps-2">
                                <p class="mb-1"><strong>@(vehicleTemplate?.Manufacturer) @(vehicleTemplate?.Model)</strong></p>
                                <p class="mb-1">Biển số: <span class="badge bg-dark">@(individualVehicle?.LicensePlate ?? "N/A")</span></p>
                                <p class="mb-0 text-muted">Số khung (VIN): @(individualVehicle?.VIN ?? "N/A")</p>
                            </div>
                        </div>
                    </div>

                    <div class="section mb-4">
                        <h6 class="section-title text-uppercase"><i class="fas fa-list me-2"></i>Chi tiết dịch vụ sạc</h6>
                        <div class="table-responsive">
                            <table class="table table-hover border service-table">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center">STT</th>
                                        <th>Nội dung dịch vụ</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-center">ĐVT</th>
                                        <th class="text-end">Đơn giá</th>
                                        <th class="text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
                                    {
                                        foreach (var detail in Model.InvoiceDetails.OrderBy(d => d.STT))
                                        {
                                            <tr>
                                                <td class="text-center">@detail.STT</td>
                                                <td>
                                                    <strong>@(detail.RevenueItem?.ItemName ?? "Dịch vụ sạc điện")</strong><br>
                                                    <small class="text-muted">Phiên sạc: @(session?.StartTime?.ToString("dd/MM HH:mm") ?? "")</small>
                                                </td>
                                                <td class="text-center">@(detail.Quantities?.ToString() ?? "0")</td>
                                                <td class="text-center">@(detail.Unit ?? "kWh")</td>
                                                <td class="text-end">@((detail.UnitPrice ?? 0).ToString("N0"))</td>
                                                <td class="text-end fw-bold">@((detail.Amount ?? 0).ToString("N0"))</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="section border-top pt-3">
                        <div class="row justify-content-end">
                            <div class="col-md-6 col-lg-5">
                                <table class="table table-sm table-borderless summary-table mb-0">
                                    <tr>
                                        <td class="text-muted">Cộng tiền dịch vụ:</td>
                                        <td class="text-end">@((Model.TotalAmountService ?? 0).ToString("N0"))</td>
                                    </tr>
                                    @if ((Model.TotalAmountDiscount ?? 0) > 0)
                                    {
                                        <tr>
                                            <td class="text-muted">Chiết khấu/Giảm giá:</td>
                                            <td class="text-end text-danger">-@((Model.TotalAmountDiscount ?? 0).ToString("N0"))</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="text-muted">Thuế GTGT (10%):</td>
                                        <td class="text-end">@((Model.TotalAmountTax ?? 0).ToString("N0"))</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="h5 fw-bold">TỔNG CỘNG:</td>
                                        <td class="h5 fw-bold text-success text-end">@((Model.Total ?? 0).ToString("N0")) VND</td>
                                    </tr>
                                </table>
                                <p class="text-muted small italic text-end mt-2">
                                    <em>(Bằng chữ: @NumberToWords((long)(Model.Total ?? 0)) đồng)</em>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <p class="mb-0 small text-muted">Hóa đơn điện tử được khởi tạo từ hệ thống quản lý trạm sạc V-GREEN</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (Model.Status == "Unpaid")
            {
                <div class="card shadow-sm border-0 mb-4 overflow-hidden">
                    <div class="card-header bg-success text-white py-3 fw-bold">
                        <i class="fas fa-wallet me-2"></i>THANH TOÁN TRỰC TUYẾN
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.PaymentLink))
                        {
                            <div class="text-center mb-4 p-3 bg-light rounded">
                                <img src="@Model.PaymentLink" alt="QR Payment" class="img-fluid shadow-sm rounded" style="max-width: 180px;" />
                                <div class="mt-2 small text-muted">Quét mã VietQR để thanh toán nhanh</div>
                            </div>
                        }

                        <div class="bg-primary bg-opacity-10 p-3 rounded mb-3">
                            <h6 class="fw-bold text-primary mb-3">Thông tin chuyển khoản:</h6>
                            <div class="small d-flex flex-column gap-2">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Ngân hàng:</span>
                                    <span class="fw-bold">VIETCOMBANK</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Chủ TK:</span>
                                    <span class="fw-bold">LE BAO TRAN</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Số TK:</span>
                                    <span class="fw-bold text-primary fs-6">1030946681</span>
                                </div>
                                <div class="d-flex justify-content-between border-top pt-2">
                                    <span class="text-muted">Nội dung:</span>
                                    <span class="fw-bold text-danger">VGREEN @Model.InvoiceNumber.ToString("D7")</span>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-success w-100 mb-2 py-2 fw-bold shadow-sm" onclick="copyPaymentInfo()">
                            <i class="fas fa-copy me-2"></i> SAO CHÉP NỘI DUNG
                        </button>

                        <button class="btn btn-primary w-100 py-2 fw-bold" onclick="showUploadProof()">
                            <i class="fas fa-upload me-2"></i> XÁC NHẬN ĐÃ CHUYỂN
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0 mb-4 bg-success bg-opacity-10">
                    <div class="card-body text-center py-5">
                        <div class="display-4 text-success mb-3"><i class="fas fa-check-circle"></i></div>
                        <h4 class="fw-bold text-success">THANH TOÁN THÀNH CÔNG</h4>
                        <hr>
                        <p class="mb-1 small">Ngày: @(Model.PaidAt?.ToString("dd/MM/yyyy HH:mm"))</p>
                        <p class="mb-0 small">Kênh: @(Model.PaymentMethod ?? "VietQR")</p>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-print me-2"></i>TIỆN ÍCH</h6>
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <a href="@Url.Action("DownloadPdf", new { id = Model.InvoiceId })" class="btn btn-outline-primary text-start">
                        <i class="fas fa-file-pdf me-2 text-danger"></i> Xuất hóa đơn (PDF)
                    </a>
                    @if (Model.SessionId.HasValue)
                    {
                        <a href="@Url.Action("ChargingDetail", "Charger", new { id = Model.SessionId })" class="btn btn-outline-info text-start">
                            <i class="fas fa-bolt me-2"></i> Chi tiết phiên sạc
                        </a>
                    }
                    <a href="@Url.Action("MyChargingSessions", "Charger")" class="btn btn-outline-secondary text-start">
                        <i class="fas fa-list me-2"></i> Lịch sử giao dịch
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



@section Styles {
    <style>
        .invoice-card {
            border-radius: 12px;
            overflow: hidden;
        }

        .section-title {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 8px;
            margin-bottom: 15px;
            color: #0d6efd;
            font-weight: 700;
            font-size: 0.85rem;
        }

        .service-table th {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .service-table td {
            vertical-align: middle;
            font-size: 0.9rem;
        }

        .info-content p {
            margin-bottom: 0.4rem;
        }

        .badge-lg {
            border-radius: 50px;
            font-weight: 700;
        }

        .summary-table td {
            padding: 5px 0;
            font-size: 0.95rem;
        }

        .italic {
            font-style: italic;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function copyPaymentInfo() {
            const text = 'VGREEN @Model.InvoiceNumber.ToString("D7")';
            navigator.clipboard.writeText(text).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Đã sao chép!',
                    text: 'Vui lòng dán vào nội dung chuyển khoản ngân hàng.',
                    timer: 2000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            });
        }
    </script>
}


@functions {
    string NumberToWords(long number)
    {
        if (number == 0) return "Không";
        if (number < 0) return "Âm " + NumberToWords(-number);

        string[] ones = { "không", "một", "hai", "ba", "bốn", "năm", "sáu", "bảy", "tám", "chín" };
        string[] tens = { "", "mười", "hai mươi", "ba mươi", "bốn mươi", "năm mươi", "sáu mươi", "bảy mươi", "tám mươi", "chín mươi" };
        string[] hundreds = { "", "một trăm", "hai trăm", "ba trăm", "bốn trăm", "năm trăm", "sáu trăm", "bảy trăm", "tám trăm", "chín trăm" };

        string ReadThreeDigits(int n)
        {
            if (n == 0) return "";
            int h = n / 100;
            int t = (n % 100) / 10;
            int o = n % 100 % 10;

            string result = hundreds[h];

            if (t > 0 || o > 0)
            {
                if (t == 0) result += " linh " + ones[o];
                else if (t == 1) result += (o == 0 ? " mười" : " mười " + ones[o]);
                else
                {
                    result += " " + tens[t];
                    if (o == 1) result += " mốt";
                    else if (o > 1) result += " " + ones[o];
                }
            }

            return result.Trim();
        }

        string result = "";

        if (number >= 1_000_000)
        {
            result += ReadThreeDigits((int)(number / 1_000_000)) + " triệu ";
            number %= 1_000_000;
        }
        if (number >= 1000)
        {
            result += ReadThreeDigits((int)(number / 1000)) + " nghìn ";
            number %= 1000;
        }
        if (number > 0) result += ReadThreeDigits((int)number);

        result = result.Trim();
        return result.Length > 0 ? char.ToUpper(result[0]) + result.Substring(1) : "Không";
    }
}