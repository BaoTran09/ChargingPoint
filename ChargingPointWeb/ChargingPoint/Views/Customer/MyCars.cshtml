@model IEnumerable<ChargingPoint.Models.IndividualVehicle>
@{
    ViewData["Title"] = "Xe ô tô của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Xác định hằng số cho ô tô
    var vehicleType = "Car";
}

<div class="content-wrapper">
    <div class="d-flex align-items-center justify-content-between mb-5">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-car-front-fill text-success me-2"></i>
                Xe ô tô của tôi
            </h2>
            <p class="text-secondary mb-0">Quản lý và thêm xe để sử dụng dịch vụ sạc nhanh V-Green</p>
        </div>

        <button class="btn btn-success d-flex align-items-center gap-2 px-4 py-3 shadow-sm"
                hx-get="@Url.Action("CreateVehicleModal", "Customer", new { type = vehicleType })"
                hx-target="#modalContainer"
                hx-swap="innerHTML">
            <i class="bi bi-plus-circle-fill"></i>
            <span class="fw-medium">Thêm xe mới</span>
        </button>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-6">
            <div class="mb-5">
                <i class="bi bi-car-front fs-1 text-muted opacity-50" style="font-size: 5rem;"></i>
            </div>
            <h4 class="text-muted mb-3">Bạn chưa đăng ký xe nào</h4>
            <p class="text-secondary mb-4">Thêm xe đầu tiên để bắt đầu sử dụng dịch vụ sạc V-Green</p>
            <button class="btn btn-success btn-lg d-flex align-items-center gap-2 mx-auto px-5 shadow-sm"
                    hx-get="@Url.Action("CreateVehicleModal", "Customer", new { type = vehicleType })"
                    hx-target="#modalContainer"
                    hx-swap="innerHTML">
                <i class="bi bi-plus-circle-fill"></i>
                Thêm xe đầu tiên
            </button>
        </div>
    }
    else
    {
        <div class="row g-4" id="vehicleList">
            @foreach (var iv in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100 position-relative overflow-hidden"
                         style="border-radius: 15px; transition: all 0.3s ease;">

                        <div class="card-body p-4">
                            <div class="d-flex align-items-center gap-3 mb-4">
                                <div class="flex-shrink-0">
                                    <div class="avatar bg-success text-white rounded-circle d-flex align-items-center justify-content-center fw-bold"
                                         style="width: 56px; height: 56px; font-size: 1.2rem;">
                                        @(string.IsNullOrEmpty(iv.LicensePlate) ? "V" : iv.LicensePlate.Substring(0, Math.Min(2, iv.LicensePlate.Length)).ToUpper())
                                    </div>
                                </div>
                                <div class="flex-grow-1 min-width-0">
                                    <h5 class="mb-1 fw-bold text-truncate" title="@iv.Vehicle.Model">
                                        @iv.Vehicle.Model
                                    </h5>
                                    <p class="mb-0 text-secondary small text-truncate">
                                        @iv.Vehicle.Manufacturer (@iv.Vehicle.Version)
                                    </p>
                                </div>
                            </div>

                            <div class="row g-3 text-center small">
                                <div class="col-6">
                                    <div class="bg-light rounded-3 py-3 px-2">
                                        <div class="text-secondary fw-medium">Biển số</div>
                                        <div class="fw-bold text-primary mt-1">
                                            @iv.LicensePlate
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-light rounded-3 py-3 px-2">
                                        <div class="text-secondary fw-medium">Pin (Gross)</div>
                                        <div class="fw-bold text-success mt-1">
                                            @(iv.Vehicle.BatteryGrossKWh?.ToString("F0") ?? "-") kWh
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3 small text-secondary">
                                <i class="bi bi-barcode me-1"></i> VIN: <span class="fw-medium">@iv.VIN</span>
                            </div>

                            <hr class="my-4">

                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm flex-fill"
                                        hx-get="@Url.Action("EditVehicleModal", "Customer", new { vin = iv.VIN })"
                                        hx-target="#modalContainer"
                                        hx-swap="innerHTML"
                                        title="Chỉnh sửa">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </button>

                                <form method="post"
                                      hx-post="@Url.Action("DeleteVehicle", "Customer", new { vin = iv.VIN })"
                                      hx-target="#vehicleList"
                                      hx-confirm="Bạn có chắc muốn xóa xe @iv.Vehicle.Model (@iv.LicensePlate)?"
                                      class="flex-fill">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100" title="Xóa xe">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div id="modalContainer"></div>



@section Scripts {
    <script src="https://unpkg.com/htmx.org@1.9.12"></script>

    <script>
        // Xử lý đóng modal và thông báo thành công
        document.body.addEventListener('htmx:afterOnRequest', (e) => {
            if (e.detail.successful && (e.detail.target.id === 'vehicleList')) {
                const modalEl = document.getElementById('vehicleModal');
                if (modalEl) {
                    const modal = bootstrap.Modal.getInstance(modalEl);
                    if (modal) modal.hide();
                }
            }
        });

        // Tự động xóa backdrop sau khi đóng modal
        document.addEventListener('hidden.bs.modal', function (event) {
            document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
        });
    </script>

    <style>
        .avatar {
            box-shadow: 0 4px 10px rgba(25, 135, 84, 0.2);
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .py-6 {
            padding-top: 5rem;
            padding-bottom: 5rem;
        }

        .min-width-0 {
            min-width: 0;
        }
    </style>
}