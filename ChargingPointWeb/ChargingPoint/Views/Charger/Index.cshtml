@model List<ChargingPoint.Models.Charger>
@{
    ViewData["Title"] = "Danh sách trụ sạc";
    var station = ViewBag.Station as ChargingPoint.DB.Station;
    var filter = ViewBag.Filter as string;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-ev-station-fill text-success"></i>
                        Trụ sạc tại @station?.Name
                    </h2>
                    <p class="text-muted mb-0">
                        <i class="bi bi-geo-alt"></i> @station?.FullAddress
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Station")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <a href="@Url.Action("Create", new { stationId = station?.StationId })" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Thêm trụ sạc
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index", new { stationId = station?.StationId })"
                   class="btn btn-outline-primary @(string.IsNullOrEmpty(filter) ? "active" : "")">
                    <i class="bi bi-list"></i> Tất cả
                </a>
                <a href="@Url.Action("Index", new { stationId = station?.StationId, filter = "Car" })"
                   class="btn btn-outline-primary @(filter == "Car" ? "active" : "")">
                    <i class="bi bi-car-front"></i> Ô tô
                </a>
                <a href="@Url.Action("Index", new { stationId = station?.StationId, filter = "Motorbike" })"
                   class="btn btn-outline-primary @(filter == "Motorbike" ? "active" : "")">
                    <i class="bi bi-bicycle"></i> Xe máy
                </a>
            </div>
            <span class="ms-3 text-muted">
                <i class="bi bi-info-circle"></i> @Model.Count trụ sạc
            </span>
        </div>
    </div>

    <!-- Charger Grid -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var charger in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <!-- Image -->
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(charger.PrimaryImageUrl))
                            {
                                <img src="@charger.PrimaryImageUrl" class="card-img-top" alt="@charger.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="bi bi-ev-station" style="font-size: 4rem; color: #ddd;"></i>
                                </div>
                            }

                            <!-- Status Badge -->
                            <span class="position-absolute top-0 end-0 m-2 badge @(charger.Status == "Online" ? "bg-success" : "bg-secondary")">
                                @charger.Status
                            </span>

                            <!-- Type Badge -->
                            <span class="position-absolute top-0 start-0 m-2 badge bg-primary">
                                @charger.ChargerType
                            </span>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title mb-2">@charger.Name</h5>

                            <div class="mb-3">
                                <span class="badge bg-info bg-opacity-10 text-info">
                                    <i class="bi bi-lightning-charge"></i> @charger.MaxPowerKW kW
                                </span>
                                <span class="badge bg-warning bg-opacity-10 text-warning">
                                    <i class="bi bi-plug"></i> @charger.PortCount cổng
                                </span>
                                @if (!string.IsNullOrEmpty(charger.UseFor))
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                        @(charger.UseFor == "Car" ? "Ô tô" : "Xe máy")
                                    </span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(charger.Model))
                            {
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-tag"></i> Model: @charger.Model
                                </p>
                            }

                            <!-- Connectors -->
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Cổng sạc:</small>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var connector in charger.Connectors.OrderBy(c => c.ConnectorIndex))
                                    {
                                        var statusClass = connector.Status == "Available" ? "success" : "secondary";
                                        var statusIcon = connector.Status == "Available" ? "circle-fill" : "dash-circle";

                                        <span class="badge bg-@statusClass bg-opacity-25 text-@statusClass"
                                              title="@connector.Status">
                                            <i class="bi bi-@statusIcon"></i> #@connector.ConnectorIndex
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
                                {
                                    <button type="button"
                                            class="btn btn-success btn-sm flex-fill request-charging-btn"
                                            data-connector-id="@charger.Connectors.FirstOrDefault(c => c.Status == "Available")?.ConnectorId"
                                    @(charger.Status != "Online" || !charger.Connectors.Any(c => c.Status == "Available") ? "disabled" : "")>
                                        <i class="bi bi-lightning-charge-fill"></i> Yêu cầu sạc
                                    </button>
                                }

                                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                {
                                    <a href="@Url.Action("Edit", new { id = charger.ChargerId })"
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = charger.ChargerId })"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <p class="text-muted mt-3">Chưa có trụ sạc nào</p>
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
                <a href="@Url.Action("Create", new { stationId = station?.StationId })" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Thêm trụ sạc đầu tiên
                </a>
            }
        </div>
    }
</div>

<!-- Modal container -->
<div id="modalContainer"></div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Request charging modal
            $('.request-charging-btn').on('click', function() {
        const connectorId = $(this).data('connector-id');

        if (!connectorId) {
            alert('Không có cổng sạc khả dụng');
            return;
        }

                $.ajax({
            url: '@Url.Action("RequestCharging")',
            data: { connectorId: connectorId },
            success: function(response) {
                if (response.success === false) {
                    alert(response.message);
                } else {
                        $('#modalContainer').html(response);
                            $('#requestChargingModal').modal('show');
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra');
                    }
                });
            });
        });
    </script>

    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }

            .hover-shadow:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }
    </style>
}