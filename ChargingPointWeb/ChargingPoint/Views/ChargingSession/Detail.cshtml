@model ChargingPoint.Models.ChargingSession
@{
    ViewData["Title"] = "Chi tiết phiên sạc #" + Model.SessionId;
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal startSOC = Model.StartSOC ?? 0;
    decimal targetSOC = Model.TargetSOC ?? 100;
    decimal currentSOC = Model.EndSOC ?? startSOC;

    // % tiến độ
    decimal progress = (targetSOC > startSOC)
        ? Math.Round((currentSOC - startSOC) * 100m / (targetSOC - startSOC), 1)
        : 0;

    // năng lượng
    decimal battery = (decimal)(Model.Vehicle?.BatteryGrossKWh ?? 80);
    decimal energyDelivered = Math.Round((currentSOC - startSOC) / 100m * battery, 2);

    // thời gian
    TimeSpan timeElapsed = Model.StartTime.HasValue
        ? DateTime.Now - Model.StartTime.Value
        : TimeSpan.Zero;

    TimeSpan timeLeft = Model.ExpectTime.HasValue
        ? Model.ExpectTime.Value - DateTime.Now
        : TimeSpan.Zero;
}


<div class="content-wrapper">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-5">
        <div>
            <nav class="breadcrumb-nav mb-2">
                <a asp-action="Index" class="text-decoration-none text-secondary">Phiên sạc</a>
                <span class="mx-2 text-secondary">/</span>
                <span class="text-primary">#@Model.SessionId</span>
            </nav>
            <h2 class="fw-bold mb-1">Phiên sạc #@Model.SessionId</h2>
            <p class="text-secondary mb-0">@Model.Connector?.Charger?.Station?.Name • @Model.StartTime:dd/MM/yyyy HH:mm</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row g-5">
        <!-- Left: Realtime Charging Circle + Stats -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-5">
                    <div class="position-relative d-inline-block">
                        <!-- Big Circle Progress -->
                        <div class="charging-circle">
                            <svg viewBox="0 0 36 36" class="circular-chart">
                                <path class="circle-bg" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
                                <path class="circle-progress" stroke-dasharray="@progress, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
                                <text x="18" y="20.35" class="percentage">@progress%</text>
                            </svg>
                        </div>
                        <div class="mt-4">
                            <h1 class="display-4 fw-bold text-success" id="currentSOC">@currentSOC.ToString("F1")%</h1>
                            <p class="text-secondary">Đang sạc từ @startSOC% → @targetSOC%</p>
                        </div>
                    </div>

                    <hr class="my-5">

                    <div class="row text-center">
                        <div class="col-6">
                            <h5 class="fw-bold text-success" id="energyDelivered">@energyDelivered kWh</h5>
                            <small class="text-secondary">Đã nạp</small>
                        </div>
                        <div class="col-6">
                            <h5 class="fw-bold" id="timeLeft">
                                @(timeLeft.TotalMinutes > 0 ? $"{timeLeft:hh\\:mm}" : "Đang tính...")
                            </h5>
                            <small class="text-secondary">Còn lại</small>
                        </div>
                    </div>

                    @if (Model.Status == "Charging")
                    {
                        <div class="mt-4">
                            <span class="badge bg-success bg-opacity-20 text-success px-4 py-3 fs-6">
                                <i class="bi bi-lightning-charge-fill me-2"></i>
                                ĐANG SẠC • LIVE
                            </span>
                        </div>
                    }
                    else if (Model.Status == "Completed")
                    {
                        <span class="badge bg-info bg-opacity-20 text-info px-4 py-3 fs-6">
                            <i class="bi bi-check2-all me-2"></i> Đã hoàn tất
                        </span>
                    }
                    else if (Model.Status == "Stopped")
                    {
                        <span class="badge bg-danger bg-opacity-20 text-danger px-4 py-3 fs-6">
                            <i class="bi bi-plug me-2"></i> Đã ngắt điện
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Right: Info + Actions -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent border-bottom py-4">
                    <h5 class="mb-0 fw-semibold">Thông tin phiên sạc</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3">
                                <i class="bi bi-ev-station-fill fs-3 text-success"></i>
                                <div>
                                    <small class="text-secondary">Trạm sạc</small>
                                    <div class="fw-bold">@Model.Connector?.Charger?.Station?.Name</div>
                                    <small>@Model.Connector?.Charger?.Name • @Model.Connector?.ConnectorType</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3">
                                <i class="bi bi-car-front-fill fs-3 text-primary"></i>
                                <div>
                                    <small class="text-secondary">Phương tiện</small>
                                    <div class="fw-bold">@Model.Vehicle?.Model</div>
                                    <small>@Model.Vehicle?.LicensePlate • @Model.Vehicle?.Manufacturer</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3">
                                <i class="bi bi-person-circle fs-3 text-info"></i>
                                <div>
                                    <small class="text-secondary">Khách hàng</small>
                                    <div class="fw-bold">@Model.Vehicle?.Customer?.FullName</div>
                                    <small>@Model.Vehicle?.Customer?.PhoneNumber</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3">
                                <i class="bi bi-clock-history fs-3 text-warning"></i>
                                <div>
                                    <small class="text-secondary">Thời gian bắt đầu</small>
                                    <div class="fw-bold">@Model.StartTime:HH:mm:ss</div>
                                    <small>@Model.StartTime:dddd, dd/MM/yyyy</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex flex-wrap gap-3">
                    @if (Model.Status == "Charging")
                    {
                        <form asp-action="StopCharging" asp-route-sessionId="@Model.SessionId" method="post"
                              onsubmit="return confirm('Ngắt nguồn sạc ngay lập tức?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger px-5 py-3 d-flex align-items-center gap-2">
                                <i class="bi bi-plug"></i> Ngắt nguồn khẩn cấp
                            </button>
                        </form>
                    }

                    @if (Model.Status == "PoweredOff" || Model.Status == "Stopped")
                    {
                        <form asp-action="CompleteSession" asp-route-sessionId="@Model.SessionId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success px-5 py-3 d-flex align-items-center gap-2">
                                <i class="bi bi-check2-circle"></i> Hoàn tất phiên
                            </button>
                        </form>
                    }

                    <button type="button" class="btn btn-outline-primary px-5 py-3" onclick="location.reload()">
                        <i class="bi bi-arrow-clockwise"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const sessionId = @Model.SessionId;
        const targetSOC = @targetSOC;
        const startSOC = @startSOC;

        function updateChargingProgress() {
            fetch(`/ChargingSession/UpdateProgress?sessionId=${sessionId}`)
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        const soc = data.currentSOC.toFixed(1);
                        const percent = data.progressPercent.toFixed(1);

                        $('#currentSOC').text(soc + '%');
                        $('.circle-progress').attr('stroke-dasharray', percent + ', 100');
                        $('.percentage').text(percent + '%');

                        // Cập nhật năng lượng
                        const energy = ((soc - startSOC) / 100 * @(Model.Vehicle?.BatteryGrossKWh ?? 80)).toFixed(2);
                        $('#energyDelivered').text(energy + ' kWh');

                        // Thời gian còn lại
                        if (data.isCompleted) {
                            $('#timeLeft').text('Hoàn tất!');
                            $('.charging-circle').addClass('completed');
                        } else {
                            const minutesLeft = Math.max(0, Math.round((targetSOC - soc) / (soc - startSOC + 0.1) * @(timeElapsed.TotalMinutes)));
                            $('#timeLeft').text(minutesLeft + ' phút');
                        }
                    }
                })
                .catch(() => console.log("Waiting for update..."));
        }

        // Cập nhật mỗi 5 giây
        setInterval(updateChargingProgress, 5000);
        updateChargingProgress(); // Load ngay
    </script>

    <style>
        .charging-circle {
            width: 200px;
            height: 200px;
        }

        .circular-chart {
            transform: rotate(-90deg);
        }

        .circle-bg {
            fill: none;
            stroke: var(--border-color);
            stroke-width: 2.8;
        }

        .circle-progress {
            fill: none;
            stroke: var(--vgreen);
            stroke-width: 3.8;
            stroke-linecap: round;
            transition: stroke-dasharray 0.6s ease;
        }

        .percentage {
            font-size: 0.5em;
            text-anchor: middle;
            fill: var(--text-primary);
            font-weight: 700;
        }

        .charging-circle.completed .circle-progress {
            stroke: #34d399;
        }

        .display-4 {
            font-size: 4rem;
        }
    </style>
}