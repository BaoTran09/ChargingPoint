@model ChargingPoint.ViewModels.CompleteProfileViewModel
@{
    ViewData["Title"] = "Hoàn tất hồ sơ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Hoàn tất thông tin cá nhân</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CompleteProfile" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Birthday" class="form-label"></label>
                            <input asp-for="Birthday" type="date" class="form-control" />

                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Hoàn tất</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>