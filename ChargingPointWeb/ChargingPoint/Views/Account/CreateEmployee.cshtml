@model ChargingPoint.ViewModels.CreateEmployeeViewModel
@{
    ViewData["Title"] = "Tạo nhân viên mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Breadcrumb + Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <nav class="breadcrumb-nav">
                <a asp-action="UserManagement" class="text-decoration-none text-secondary">Quản lý nhân viên</a>
                <span class="mx-2 text-secondary">/</span>
                <span class="text-primary">Tạo nhân viên mới</span>
            </nav>
            <h2 class="fw-bold mt-2 mb-1">Tạo tài khoản nhân viên</h2>
            <p class="text-secondary mb-0">Điền đầy đủ thông tin để thêm nhân viên vào hệ thống</p>
        </div>
        <a asp-action="UserManagement" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <!-- Main Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <form asp-action="CreateEmployee" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded mb-4"></div>

                        <!-- Thông tin tài khoản -->
                        <div class="mb-5">
                            <h5 class="fw-semibold mb-4 d-flex align-items-center gap-2">
                                <i class="bi bi-person-lock fs-4 text-primary"></i>
                                Thông tin đăng nhập
                            </h5>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-medium">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="employee@vgreen.vn" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Username" class="form-label fw-medium">Tên đăng nhập <span class="text-danger">*</span></label>
                                    <input asp-for="Username" class="form-control form-control-lg" placeholder="nguyenvana" />
                                    <div class="form-text">Không thể thay đổi sau khi tạo</div>
                                    <span asp-validation-for="Username" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-4 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label fw-medium">Mật khẩu <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" />
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password')">
                                            <i class="bi bi-eye" id="password-icon"></i>
                                        </button>
                                    </div>
                                    <div class="mt-2">
                                        <span id="passwordStrength" class="badge bg-secondary">Nhập mật khẩu</span>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label fw-medium">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control form-control-lg" />
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                                            <i class="bi bi-eye" id="confirmPassword-icon"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-5">

                        <!-- Thông tin cá nhân -->
                        <div class="mb-5">
                            <h5 class="fw-semibold mb-4 d-flex align-items-center gap-2">
                                <i class="bi bi-person-circle fs-4 text-success"></i>
                                Thông tin cá nhân
                            </h5>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label asp-for="FullName" class="form-label fw-medium">Họ và tên <span class="text-danger">*</span></label>
                                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="Nguyễn Văn A" />
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label fw-medium">Số điện thoại</label>
                                    <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="0901234567" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-4 mt-3">
                                <div class="col-md-6">
                                    <label asp-for="JobTitle" class="form-label fw-medium">Chức vụ <span class="text-danger">*</span></label>
                                    <select asp-for="JobTitle" class="form-select form-select-lg">
                                        <option value="">-- Chọn chức vụ --</option>
                                        <option value="Manager">Quản lý</option>
                                        <option value="Technician">Kỹ thuật viên</option>
                                        <option value="Customer Service">Chăm sóc khách hàng</option>
                                        <option value="Accountant">Kế toán</option>
                                        <option value="Sales">Kinh doanh</option>
                                        <option value="Support Staff">Hỗ trợ vận hành</option>
                                    </select>
                                    <span asp-validation-for="JobTitle" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Status" class="form-label fw-medium">Trạng thái tài khoản</label>
                                    <select asp-for="Status" class="form-select form-select-lg">
                                        <option value="Active">Hoạt động ngay</option>
                                        <option value="Inactive">Tạm dừng (cần kích hoạt sau)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-3 mt-5">
                            <a asp-action="UserManagement" class="btn btn-outline-secondary px-5 py-3">
                                <i class="bi bi-x-lg"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success px-5 py-3 d-flex align-items-center gap-2 shadow-sm">
                                <i class="bi bi-check2-circle"></i>
                                <span class="fw-medium">Tạo nhân viên</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Box -->
            <div class="alert alert-info mt-4 d-flex align-items-start gap-3 border-0">
                <i class="bi bi-info-circle-fill fs-4 flex-shrink-0 mt-1"></i>
                <div class="small">
                    <strong>Lưu ý quan trọng:</strong>
                    <ul class="mb-0 mt-2">
                        <li>Tên đăng nhập và Email phải là duy nhất trong hệ thống</li>
                        <li>Nhân viên sẽ đăng nhập bằng <strong>Tên đăng nhập</strong> (không dùng Email)</li>
                        <li>Nên yêu cầu nhân viên đổi mật khẩu ngay lần đăng nhập đầu tiên</li>
                        <li>Gợi ý: Dùng email công ty để tạo tài khoản (vd: an.nguyen@vgreen.vn)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml"); }

    <script>
        // Toggle hiện/ẩn mật khẩu
        function togglePassword(id) {
            const input = document.getElementById(id);
            const icon = document.getElementById(id + '-icon');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }

        // Tự động điền Username từ Email
        $('#Email').on('blur', function () {
            if (!$('#Username').val() && $(this).val()) {
                const username = $(this).val().split('@@')[0].toLowerCase().replace(/[^a-z0-9]/g, '');
                $('#Username').val(username);
            }
        });

        // Kiểm tra độ mạnh mật khẩu
        $('#password').on('input', function () {
            const val = $(this).val();
            let strength = 0;
            if (val.length >= 6) strength++;
            if (val.length >= 10) strength++;
            if (/[a-z]/.test(val) && /[A-Z]/.test(val)) strength++;
            if (/\d/.test(val)) strength++;
            if (/[^a-zA-Z0-9]/.test(val)) strength++;

            const badge = $('#passwordStrength');
            badge.removeClass('bg-danger bg-warning bg-success bg-secondary');

            if (val === '') {
                badge.text('Nhập mật khẩu').addClass('bg-secondary');
            } else if (strength <= 2) {
                badge.text('Yếu').addClass('bg-danger');
            } else if (strength <= 3) {
                badge.text('Trung bình').addClass('bg-warning');
            } else {
                badge.text('Mạnh').addClass('bg-success');
            }
        });
    </script>

    <style>
        .breadcrumb-nav {
            font-size: 0.95rem;
        }
        .form-control-lg,
        .form-select-lg {
            border-radius: var(--radius);
        }
        .card {
            border-radius: var(--radius);
        }
        .alert-info {
            background: var(--vgreen-light);
            border-left: 4px solid var(--vgreen);
        }
        hr {
            border-top: 1px solid var(--border-color);
            opacity: 1;
        }
    </style>
}